/* 组件白色背景 */
page{
  background-color: #fff;
}
/* 当前商品条目 */
.shop{
  padding:20rpx;
  border-bottom:1rpx solid #ddd;
  display:flex;
  position: relative;
}
/* 当前商品图片 */
.shop .shop-img{
  width:160rpx;
  height:160rpx;
  margin-right: 20rpx;
}
/* 商品信息 */
.shop .shop-info{
  width:520rpx;
  font-size:12px;
  color:#666;
  display: flex;
  flex-direction: column;
  line-height:1.5;
}
/* 店铺名称 */
.shop-title{
  font-size:16px;
  color:#333;
  width:380rpx;
}
.shop-star{
  position:absolute;
  right:20rpx;
  top:20rpx;
}
.start-after{
  color:#e2e2e2;
}
.start-before{
  color:#f19e38;
  position:absolute;
  top:0;
  left:0;
  width:75%;   /*分数*/
  overflow:hidden;
}
